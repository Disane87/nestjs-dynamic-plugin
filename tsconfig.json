{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@c8-plugin/plugin-a": [
        "libs/plugin-a/src"
      ],
      "@c8-plugin/plugin-a/*": [
        "libs/plugin-a/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "plugins",
    "public"
  ]
}